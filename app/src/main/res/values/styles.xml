<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="ms_stepperStyle">@style/DotStepperStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--item nameOrEntered="colorSecondary">@color/colorSecondary</ite-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DotStepperStyle">
        <item name="ms_activeStepColor">#ffffff</item>
        <!--item nameOrEntered="ms_inactiveStepColor">#888888</item>
        <item nameOrEntered="ms_bottomNavigationBackground">@color/colorSecondary</item-->
        <item name="ms_inactiveStepColor">@color/colorPrimary</item>
        <item name="ms_bottomNavigationBackground">@color/colorPrimaryDark</item>
        <item name="ms_backButtonColor">#ffffff</item>
        <item name="ms_nextButtonColor">#ffffff</item>
        <item name="ms_completeButtonColor">#ffffff</item>
    </style>

    <style name="EmptyView" parent="TextAppearance.AppCompat.Tooltip">
        <item name="android:gravity">top|center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FAB.Main" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="Button.Small" parent="Widget.Design.FloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/fab_margin_small</item>
        <item name="fabSize">mini</item>
    </style>
    <style name="FAB.Small" parent="Button.Small">
        <item name="android:layout_marginRight">@dimen/fab_small_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/fab_small_margin_bottom</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

    <style name="SmallButtonWithText" >
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center|end</item>
    </style>


    <style name="Item.Patient" parent="@style/TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="DropDownTypeItem" parent="TextAppearance.AppCompat.Tooltip">
        <item name="android:gravity">top|center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
