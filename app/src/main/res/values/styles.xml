<resources>

    <!-- Base application theme. -->
    <style name="IkemTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ikem_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ikem_colorPrimaryDark</item>
        <item name="colorAccent">@color/ikem_colorAccent</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="colorSecondaryVariant">@color/ikem_colorInvalid</item>
        <item name="titleTextColor">@color/plzen_titleTextColor</item>
    </style>

    <style name="IkemTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    Plzen theme-->
    <style name="PlzenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/plzen_colorPrimary</item>
        <item name="colorPrimaryDark">@color/plzen_colorPrimaryDark</item>
        <item name="colorAccent">@color/plzen_colorAccent</item>
        <item name="colorSecondaryVariant">@color/plzen_colorInvalid</item>
        <item name="titleTextColor">@color/plzen_titleTextColor</item>
    </style>

    <style name="PlzenTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="EmptyView" parent="TextAppearance.AppCompat.Tooltip">
        <item name="android:gravity">top|center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="FAB.Main" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_marginEnd">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="Button.Small" parent="Widget.Design.FloatingActionButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:layout_margin">@dimen/fab_margin_small</item>
        <item name="fabSize">mini</item>
    </style>
    <style name="FAB.Small" parent="Button.Small">
        <item name="android:layout_marginRight">@dimen/fab_small_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/fab_small_margin_bottom</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

    <style name="SmallButtonWithText" >
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center|end</item>
    </style>


    <style name="Item.Patient" parent="@style/TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_mini</item>
        <item name="android:paddingRight">@dimen/margin_mini</item>
    </style>

    <style name="DropDownTypeItem" parent="TextAppearance.AppCompat.Tooltip">
        <item name="android:gravity">top|center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
